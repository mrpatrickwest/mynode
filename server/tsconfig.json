{
  "compilerOptions": {
    "lib": ["es2015", "esnext.asynciterable"],
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "./lib",
    "rootDir": "./",
    "sourceMap": true,
    "strict": true,
    "target": "es6"
  },
  "compileOnSave": false,
  "exclude": ["node_modules"],
  "atom": {
    "rewriteTsconfig": true
  },
  "filesGlob": ["*.ts{,x}"]
}

